  <application>
    <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

    <message-bundle>com.vk.crawler.message.i18n.en_GB.JSFMessages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>fr</supported-locale>
    </locale-config>
    <resource-bundle>
      <base-name>com.vk.crawler.message.i18n.en_GB.GlobalMessages</base-name>
      <var>globalMessage</var>
    </resource-bundle>
  </application>
