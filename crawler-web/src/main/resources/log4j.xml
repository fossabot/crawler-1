<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  <appender name="logonconsole" class="org.apache.log4j.ConsoleAppender"> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <!-- Pattern to output the caller's file name and line number -->
      <param name="ConversionPattern" value="%6p %d{dd MMM HH:mm:ss,SSS} (%F:%M():%L) - %m%n"/> 
    </layout> 
  </appender>
  
  <appender name="logtofile" class="org.apache.log4j.RollingFileAppender"> 
    <param name="file" value="../logs/tomcat.log"/>
    <param name="MaxFileSize" value="100KB"/>
    <param name="MaxBackupIndex" value="10"/>
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%6p %d{dd MMM HH:mm:ss,SSS} %t (%F:%M():%L) - %m%n"/> 
    </layout> 
  </appender> 
  
  <logger name="com.vk">
    <level value="debug"/>
    <appender-ref ref="logonconsole" />
    <appender-ref ref="logtofile" /> 
  </logger>
  
  <root> 
    <priority value ="all" /> 
    <appender-ref ref="logonconsole" /> 
    <appender-ref ref="logtofile" /> 
  </root>
  
  
</log4j:configuration>